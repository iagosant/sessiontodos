<%= form_for(@user, method: :PUT) do |f| %>
<% if @user.errors.any? %>
<div class="row">
  <div class="col s12">
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col s12">
    <div class="field">
      <%= f.hidden_field :current_step, :value => "avatar" %>
      <%= f.label :avatar %></br>
      <%= f.file_field :avatar %>
    </div>
    <div class="input-field center-align">
      <a class="waves-effect waves-light su-btn btn-flat submit"><%= submit_tag "Update"%></a>
    </div>
  </div>
</div>
<% end %>
