<div class="user" id="user-new">
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-title">
          <div class="col s12 m9">
            <h1>Editing User</h1>
            <h6><%= current_user.first_name %> <%= current_user.last_name %></h6>
            <%= flash[:message] %>
          </div>
          <i class="material-icons large col s12 m3">portrait</i>
        </div>
        <div class="row">
          <div class="col s12">
            <ul class="tabs">
              <li class="tab col s3"><a href="#test1">Personal</a></li>
              <li class="tab col s3"><a href="#test2">Avatar</a></li>
              <li class="tab col s3"><a href="#test3">Security</a></li>
              <li class="tab col s3"><a href="#test4">Collabs</a></li>
            </ul>
          </div>
          <div id="test1" class="col s12"><%= render 'users/personal_info' %></div>
          <div id="test2" class="col s12"><%= render 'users/avatar' %></div>
          <div id="test3" class="col s12"><%= render 'users/security' %></div>
          <div id="test4" class="col s12"><%= render 'users/collaborators'%></div>
        </div>
      <div class="card-action">
        <div class="row center-align">
          <div class="col s12 m6">
            <%= link_to 'USER', current_user %>
          </div>
          <div class="col s12 m6">
            <%= link_to 'BACK', sessions_path %>
          </div>
          <div class="col s12 m12">
            Signed in as <%= current_user.first_name.capitalize %> | <%= link_to "Logout", '/logout' %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>
