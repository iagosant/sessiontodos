  <% if @user.errors.any? %>
    <div class="row">
      <div class="col s12">
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
    <%= form_for(@user, method: :PUT) do |f| %>
      <div class="valign-wrapper ms-upload-avatar" style="<% if (!current_user.nil?) %>background-image: url('<%= current_user.avatar('thumb') %>');<% end %>">
        <%= f.file_field :avatar %>
        <label for="user_avatar">
          <div class="mousehover <%= (current_user.nil?)? 'hover': '' %> ">
            <i class="material-icons">camera_alt</i><%= (current_user.nil?)? "Upload": "Change" %> your Avatar</label>
          </div>
      </div>
    <% end %>
    <%= form_for(@user) do |f| %>
    <div class="section ms-form">
        <div class="input-field capitalize">
          <i class="material-icons prefix">person_outline</i>
          <%= f.text_field :first_name %>
          <%= f.label :first_name, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field capitalize">
          <i class="material-icons prefix">person_outline</i>
          <%= f.text_field :last_name %>
          <%= f.label :last_name, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <%= f.text_field :email %>
          <%= f.label :email, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field center-align">
          <a class="waves-effect waves-light btn-large row submit"><%= f.submit "Settings" %></a>
       </div>
     </div>
<% end %>
