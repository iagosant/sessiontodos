<% if task.completed?  %>
	<ul id='task_<%= task.id%>' class="menu-option">
	 	<li  class="col s11" style="text-transform: line-through">
			 <%= label_tag "completed_#{task.id}", "#{task.detail} #{task.completed_at} created_at: #{task.created_at.strftime('%m:%d:%Y')} "%>
		 </li>
		 <li class="col s1">
			 <% if permitted_user?(@user,@list) %>
				 <%= link_to task, method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
						<i class="material-icons">delete</i>
				 <% end %>
			 <% end %>
		 </li>
	 </ul>
<% else %>
	<ul id='task_<%= task.id%>' class="menu-option 	<%= (is_today?((task.created_at.to_date )))? 'today' : 'before'  %>">
		<li  class="col s10">
				<%= label_tag "completed_#{task.id}", "#{task.detail} #{task.completed_at} created_at: #{task.created_at.strftime('%m:%d:%Y')} "%>
	 	</li>
		<li>
			<%= form_for task, url: complete_task_path(:id => task.id, :list_id => @list.id), remote: true do |f| %>
			<%= check_box_tag "completed[#{task.id}]", "#{task.id}", true, :name => "task_id", disabled: task.completed? || !permitted_user?(@user,@list) %>
			<%= f.submit "Update" %>
			<% end %>

		</li>
		 <li>
			  <% if (!task.completed? && permitted_user?(@user,@list))  %>
					<%= link_to edit_list_task_path(list_id: @list.id, id: task.id), remote: true do %>
						 	<i class="material-icons">mode_edit</i>
					<% end %>
				<% end %>
		 </li>
		 <li>
			  <% if (!task.completed? && permitted_user?(@user,@list))  %>
			  	<a class='dropdown-button' href='#!' data-activates='dropdownlist_<%= task.id%>'>
						<i class="material-icons">view_list</i>
					</a>
				<% end %>
		 </li>
		 <li>
				<% if !task.completed? %>
					<%= link_to task_t_blockers_path(list_id: @list.id, task_id: task.id,user_id: @user),id: 'completed', remote: true do %>
					   <i class="material-icons">warning</i>
					<% end %>
				<% end %>
			</li>
			<li>
				<% if permitted_user?(@user,@list) %>
					<%= link_to task, method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
						 <i class="material-icons">delete</i>
					<% end %>
				<% end %>
			</li>
		</ul>
		<div class='show_blockers row' id="show_blockers_<%= task.id%>" style="display:none">
		 <% if permitted_user?(@user,@list) %>
				<div id= "new_blocker_<%= task.id%>"></div>
		  <% end%>
			<div id= "blockers_task<%= task.id%>">
			</div>
	  </div>
		<ul id="dropdownlist_<%= task.id%>" class="dropdown-list">
			<% current_all_lists.each do |list| %>
			    <% if (list.id != @list.id) %>
					    <li><%= link_to list.name, changelist_task_path(list_id: list.id, id: task.id ), remote: true, :method=> :patch  %></li>
					<% end %>
			<% end %>
	  </ul>

	<% end %>
  <!-- Modal Structure -->
  <div id="edit_task" class="modal" style="width:100%;max-height:100%;height:100%">
		<div class="clearfix"></div>
    <div class="valign-wrapper" style="height:100%">

    </div>

  </div>
