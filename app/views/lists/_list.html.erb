<div class="new-task">
 <%= render partial: 'tasks/form' %>
</div>
<% unless @list.tasks.empty? %>
  <div class="row">
     <h6>Incomplete Tasks</h6>
     <div class="tasks" id="incomplete_tasks">
       <%= render @incomplete_tasks %>
     </div>
   </div>
   <div class="row">
       <h6>Completed Tasks</h6>
       <div class="tasks" id="complete_tasks">
         <% if @complete_tasks.empty? %>
            <p>This List don't have completed tasks at this time</p>
         <% else %>
            <%= render @complete_tasks %>
         <% end %>
       </div>
    </div>
<% end %>
<div class="row">
  <div class="col s2">

    <%= link_to "Edit List", edit_list_path(@list) %>
  </div>
  <% unless @list.all_tasks? %>
  <div class="col s2">

    <p class="delete-list">
      <%= link_to 'Delete this list', @list, :confirm => 'Are you sure?', :method => :delete %>
    </p>
  </div>
  <% end %>
  <div class="col s2">

    <p class="delete-list">
      <%= link_to 'New invitations', new_list_invitation_path(@list) %>
    </p>
  </div>


</div>
