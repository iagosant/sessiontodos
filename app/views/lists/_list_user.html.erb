<% if @list_user.tasks.empty? %>
  <div class="new-task">
    <%= render partial: 'tasks/form' %>
  </div>
<% end %>
<% unless @list_user.tasks.empty? %>
  <div>
     <h6>Incomplete Tasks</h6>
     <div class="tasks" id="incomplete_tasks">
       <%= render @list_user_incomplete_tasks %>
     </div>
   </div>
   <div>
       <h6>Completed Tasks</h6>
       <div class="tasks" id="complete_tasks">
         <% if @list_user_complete_tasks.empty? %>
            <p>This List don't have completed tasks at this time</p>
         <% else %>
            <%= render @list_user_complete_tasks %>
         <% end %>
       </div>
    </div>
<% end %>
<div class="row">
  <div class="col s2">
    <%= link_to "Edit List", edit_list_path(@list) %>
  </div>
  <% unless (@list.all_tasks?||!owner?) %>
  <div class="col s2">
    <p class="delete-list">
      <%= link_to 'Delete this list', @list, :confirm => 'Are you sure?', :method => :delete, remote: true %>
    </p>
  </div>
  <div class="col s6" id="new_initation_link">
    <%= link_to 'New invitations', new_list_invitation_path(@list), remote: true %>
  </div>
  <% end %>
</div>
<!-- Modal Structure -->
<div id="modal_new_invitation" class="modal bottom-sheet">
  <div class="modal-content">
    <h4>Modal Header</h4>
    <p>A bunch of text</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>
